<link rel="stylesheet" href="/css/curr_employee.css">

<h1 class="page-title mt-5" style="text-align: center;"> Current Employee: <%= employee.name %> </h1>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <%- include('./partials/curr_employee/update_employee'); -%>  
    </div>
    <div class="col-md-6">
      <div class="container mt-5">
        <h2>Employees review list</h2>
        <form method="post">
          <div class="form-group">
            <%- include('./partials/curr_employee/remove_from_list'); -%>  
          </div>
          <div class="form-group">
            <%- include('./partials/curr_employee/add_to_list'); -%>  
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <form method="get" action="/dashboard/admin/employees">
        <div class="form-group mt-3" style="text-align: center;">
          <button type="submit" class="btn btn-primary btn-block btn-lg">Go back to full employees list</button>
        </div>
      </form>
    </div>
  </div>
</div>