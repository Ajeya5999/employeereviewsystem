<html>
    <head>
        <title>Employee Review System | <%= title %></title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Incuding CSS for layout and particals -->

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/auth.css">
        <link rel="stylesheet" href="/css/view_notif.css">
        <%- style %> <!-- Styles for other partials -->

    </head>
    <body>
        <!-- Layout -->

        <%- include('../partials/view_notif'); -%> <!-- Render the message sent from the server -->

        <div class="background-layer"></div>

        <main id="layout-main">

            <div class="auth-box">

                <div class="logo">
                  <img src="/images/logo.png" alt="Logo" width="100">
                </div>

                <div class="site-title">
                    <h3>Employee Review System</h3>
                  </div>

                <%- body -%> <!-- render the necessary partials -->

            </div>

        </main>

        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
        <script src="/javascript/view_notif.js"></script>
        <%- script %> <!-- Scripts for other partials -->
    </body>
</html>