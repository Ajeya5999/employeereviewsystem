<div class="accordion" id="accordionExample">
    <div class="accordion-item mb-3">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Remove Employees from review list
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <% if(auth_list.length === 0) { %>
            <strong> The List is Empty </strong>
          <% } else { %>
            <ul class="list-group">
              <% for(employee of auth_list) { %>
                <li class="list-group-item">
                  <input type="checkbox" class="custom-control-input" id="<%= employee.email %>">
                  <label class="custom-control-label" for="checkbox1"><%= employee.email %></label>
                </li>
              <% } %>
            </ul>
            <div class="form-group mt-3" style="text-align: center;">
              <button type="submit" class="btn btn-danger" formaction="">Remove Employees from list</button>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>