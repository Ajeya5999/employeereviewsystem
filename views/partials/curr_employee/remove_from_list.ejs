<div class="accordion" id="accordionExample">
    <div class="accordion-item mb-3">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Remove Employees from review list
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <% if(auth_list.length === 0) { %>
            <strong> The List is Empty </strong>
          <% } else { %>
            <ul class="list-group">
              <% for(listEmployee of auth_list) { %>
                <li class="list-group-item">
                  <input type="checkbox" class="custom-control-input" id="<%= listEmployee.email %>">
                  <label class="custom-control-label" for="checkbox1"><%= listEmployee.email %></label>
                </li>
              <% } %>
            </ul>
            <% if(employee.user_type !== "Admin") { %>
              <div class="form-group mt-3" style="text-align: center;">
                <button type="submit" class="btn btn-danger" formaction="/dashboard/admin/remove_from_list/<%= employee._id %>">Remove Employees from list</button>
              </div>
            <% } %>
          <% } %>
        </div>
      </div>
    </div>
  </div>